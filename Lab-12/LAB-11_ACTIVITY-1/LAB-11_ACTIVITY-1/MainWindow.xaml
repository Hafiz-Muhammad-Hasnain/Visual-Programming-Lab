<Window x:Class="LAB_11_ACTIVITY_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Current Time Display" Height="200" Width="300">
    <Grid>
        <TextBlock Text="{Binding CurrentTime, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
    </Grid>
</Window>